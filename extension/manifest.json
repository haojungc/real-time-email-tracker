{

  "manifest_version": 2,
  "name": "Email Tracker",
  "version": "0.1",

  "description": "Tracks your email status in real-time",

  "icons": {
    "96": "icons/email-128.png"
  },

  "permissions": [
      "activeTab",
      "https://d7ccjmymx2.execute-api.us-west-1.amazonaws.com/default/*"
  ],

  "content_scripts": [
    {
      "matches": [
           "https://mail.google.com/mail/*"
      ],
      "js": ["content_script/email.js"]
    }
  ],

  "browser_action": {
      "default_icon": "icons/email-64.png",
      "default_title": "Email Tracker",
      "default_popup": "popup/index.html"
  }
}
